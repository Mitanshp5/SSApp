<Window x:Class="SSApp.UI.MachineStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Machine Status"
        Height="400" Width="650"
        WindowStartupLocation="CenterOwner"
        Background="#111827">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Camera Settings -->
        <Border Grid.Row="0"
                Background="#1E293B"
                BorderBrush="#1E40AF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16"
                Margin="16">
            <StackPanel>
                <TextBlock Text="CAMERA SETTINGS"
                           Foreground="#94A3B8"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="CameraList"
                              Width="300"
                              Height="32"
                              Margin="0,0,12,0"/>
                    
                    <Button x:Name="RefreshButton"
                            Content="Refresh"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            Click="RefreshButton_Click"/>
                    
                    <Button x:Name="ConnectButton"
                            Content="Apply &amp; Restart"
                            Padding="12,6"
                            Background="#2563EB"
                            Foreground="White"
                            BorderThickness="0"
                            Click="ConnectButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Placeholder for Status -->
        <Border Grid.Row="1"
                Background="#020617"
                CornerRadius="10"
                Padding="20"
                Margin="16,0,16,16">
            <TextBlock Text="Detailed machine status monitoring..."
                       Foreground="#9CA3AF"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
