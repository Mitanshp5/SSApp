<Window x:Class="SSApp.UI.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard"
        Height="550"
        Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#020617">
    <Window.Resources>
        <!-- Accent brushes -->
        <SolidColorBrush x:Key="AccentBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="AccentBrushLight" Color="#3B82F6"/>

        <!-- Sidebar button style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter Margin="6,2"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1F2937"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#111827"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Title bar buttons -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#111827"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F2937"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <!-- custom title bar -->
            <RowDefinition Height="*"/>
            <!-- whole app body -->
        </Grid.RowDefinitions>

        <!-- ===== TITLE BAR (full width, top row) ===== -->
        <Border Grid.Row="0"
                Background="#020617"
                BorderBrush="#2563EB"
                BorderThickness="0,0,0,1">
            <Grid MouseDown="TitleBar_MouseDown">
                <TextBlock Text="SSApp – Dashboard"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           FontSize="13"
                           FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <!-- Minimize -->
                    <Button Style="{StaticResource TitleBarButtonStyle}"
                            Content="—"
                            Click="Minimize_Click"/>
                    <!-- Maximize / Restore -->
                    <Button Style="{StaticResource TitleBarButtonStyle}"
                            Content="☐"
                            Click="Maximize_Click"/>
                    <!-- Close -->
                    <Button Style="{StaticResource TitleBarButtonStyle}"
                            Content="✕"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== BODY (sidebar + main) ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <!-- sidebar -->
                <ColumnDefinition Width="*"/>
                <!-- main -->
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0"
                    Background="#020617">
                <DockPanel Margin="16">
                    <!-- Bottom: logout -->
                    <StackPanel DockPanel.Dock="Bottom"
                                Margin="0,16,0,0">
                        <Separator Margin="0,8,0,8" Opacity="0.3"/>
                        <Button x:Name="LogoutButton"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Logout"
                                Click="LogoutButton_Click"/>
                    </StackPanel>

                    <!-- Top: title + nav -->
                    <StackPanel>
                        <TextBlock Text="SSApp"
                                   Foreground="White"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Margin="0,0,0,4"/>

                        <TextBlock x:Name="UserInfoText"
                                   Foreground="#9CA3AF"
                                   FontSize="12"
                                   Margin="0,0,0,2"/>

                        <TextBlock x:Name="RoleInfoText"
                                   Foreground="#6B7280"
                                   FontSize="12"
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Navigation"
                                   Foreground="#6B7280"
                                   FontSize="12"
                                   Margin="0,8,0,4"/>

                        <Button x:Name="MachineStatusButton"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Machine Status"
                                Click="MachineStatusButton_Click"/>

                        <Button x:Name="StartScanButton"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Start Scan"
                                Click="StartScanButton_Click"/>

                        <Button x:Name="PastScansButton"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Past Scans"
                                Click="PastScansButton_Click"/>

                        <Button x:Name="SettingsButton"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Settings"
                                Click="SettingsButton_Click"/>

                        <Button x:Name="ManageUsersButton"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Manage Users"
                                Click="ManageUsersButton_Click"
                                Margin="0,16,0,0"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Main panel -->
            <Grid Grid.Column="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top status cards -->
                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            Margin="0,0,0,12">
                    <!-- PLC status card -->
                    <Border Background="#020617"
                            CornerRadius="10"
                            Padding="16"
                            Margin="0,0,12,0"
                            Width="220">
                        <StackPanel>
                            <TextBlock Text="PLC Connection"
                                       Foreground="#9CA3AF"
                                       FontSize="12"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,6,0,0"
                                        VerticalAlignment="Center">
                                <Ellipse x:Name="PlcStatusIndicator"
                                         Width="10" Height="10"
                                         Fill="Red"
                                         Margin="0,2,8,0"/>
                                <TextBlock x:Name="PlcStatusText"
                                           Text="Disconnected"
                                           Foreground="White"
                                           FontSize="14"
                                           FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Machine status summary card -->
                    <Border Background="#020617"
                            CornerRadius="10"
                            Padding="16"
                            Margin="0,0,12,0"
                            Width="260">
                        <StackPanel>
                            <TextBlock Text="Machine Status"
                                       Foreground="#9CA3AF"
                                       FontSize="12"/>
                            <TextBlock x:Name="MachineStatusText"
                                       Margin="0,6,0,0"
                                       Text="Not checked"
                                       Foreground="White"
                                       FontSize="14"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Main placeholder area -->
                <Border Grid.Row="1"
                        Background="#020617"
                        CornerRadius="10"
                        Padding="20">
                    <TextBlock Text="Dashboard content area.
Select an option from the left."
                               Foreground="#6B7280"
                               FontSize="16"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
